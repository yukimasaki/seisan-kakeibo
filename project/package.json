{
  "private": true,
  "workspaces": [
    "backend",
    "frontend",
    "common"
  ],
  "scripts": {
    "clean:types": "rimraf ./common/types/*",
    "front:dev": "yarn workspace frontend next dev",
    "front:build": "yarn workspace frontend next build",
    "front:start": "pm2 startOrRestart ./frontend/ecosystem.config.cjs",
    "front:deploy": "yarn front:build && yarn front:start",
    "front:test": "yarn workspace frontend jest",
    "front:test:cov": "yarn workspace frontend jest --coverage",
    "back:dev": "yarn workspace backend nest start --watch",
    "back:build": "yarn workspace backend nest build",
    "back:start": "pm2 startOrRestart ./backend/ecosystem.config.cjs",
    "back:deploy": "yarn back:build && yarn back:start",
    "back:test": "yarn workspace backend jest",
    "back:test:cov": "yarn workspace backend jest --coverage",
    "back:share": "yarn workspace backend tsc -w -p ../backend/tsconfig.share.json --emitDeclarationOnly"
  },
  "devDependencies": {
    "rimraf": "^5.0.5"
  }
}
